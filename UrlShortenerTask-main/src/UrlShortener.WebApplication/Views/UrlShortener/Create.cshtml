@model UrlShortener.Common.Requests.CreateShortUrlRequest

<form asp-action="Create">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="LongUrl">Provide URL:</label>
        <input asp-for="LongUrl" class = "form-control"/>
        <span asp-validation-for="LongUrl" class = "text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alias">[Optional] Enter your own alias:</label>
        <input asp-for="Alias" class = "form-control"/>
        <span asp-validation-for="Alias" class = "text-danger"></span>
        @if (TempData.ContainsKey("ErrorMessage"))
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
    </div>

    <div class="form-group">
        <button type="submit" class="btn btnA-primary" value="Create">Submit</button>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
